@{
}

@model List<CustomIdentity.Models.Material>

<h1>Materials</h1>

<a class="btn btn-primary" href="@Url.Action("Add", "Material")">Add a New Material</a>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Suppplier</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var material in Model)
        {
          <tr>
                <td>@material.Id</td>
                <td>@material.Name</td>
                <td>@material.Description</td>
                <td>@material.UnitPrice</td>
                <td>@material.Quantity</td>
                <td>@material.Supplier</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Material" asp-action="Edit" asp-route-id="@material.Id">Edit</a>
                </td>
          </tr>
        }
    </tbody>
</table>
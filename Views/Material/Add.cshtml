@{
}

@model  CustomIdentity.Models.AddMaterialViewModel;

<h1>Add Material</h1>

<form method="post">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="mt-3">
    <label class="form-label"> Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mt-3">
    <label class="form-label"> Description</label>
    <input type="text" class="form-control" asp-for="Description"/>
        <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="mt-3">
    <label class="form-label"> Unit Price</label>
    <input type="number" class="form-control" asp-for="UnitPrice"/>
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
</div>

    <div class="mt-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Supplier</label>
        <input type="text" class="form-control" asp-for="Supplier" />
        <span asp-validation-for="Supplier" class="text-danger"></span>
    </div>


<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>